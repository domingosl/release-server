<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <title>Upload release</title>

    <!-- Bootstrap core CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">

    <style>
      .bd-placeholder-img {
        font-size: 1.125rem;
        text-anchor: middle;
      }

      @media (min-width: 768px) {
        .bd-placeholder-img-lg {
          font-size: 3.5rem;
        }
      }
    </style>
    <!-- Custom styles for this template -->
    <link href="css/styles.css" rel="stylesheet">
  </head>
  <body class="text-center">
    <div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">
  <header class="masthead mb-auto">
    <div class="inner">
      <h3 class="masthead-brand">Release server</h3>
    </div>
  </header>

  <main role="main" class="inner cover">

    <h4 class="cover-heading">Upload new release</h4>
    <br />
    <form method="POST" action="/upload-release" enctype="multipart/form-data">

        <div class="row">
            <div class="col">
                <input type="text" class="form-control" name="target" placeholder="Target">
            </div>
        </div>

        <br />

        <div class="row">
          <div class="col">
            <input type="number" class="form-control" name="major" placeholder="Major">
          </div>
          <div class="col">
            <input type="number" class="form-control" name="minor" placeholder="Minor">
          </div>
          <div class="col">
            <input type="number" class="form-control" name="patch" placeholder="Patch">
          </div>
        </div>

        <br />

        <div class="row">
            <div class="col text-left">
                    <div class="form-group">
                        <label for="bin">BIN File</label>
                        <input type="file" class="form-control-file" id="bin" name="file">
                    </div>
            </div>
        </div>
        <br />
        <button type="submit" class="btn btn-outline-primary btn-lg">Upload</button>

    </form>
    <br /><br />
    <h5>Firmwares availables</h5>
    <ul class="list-group">
        <% for (var i = 0; i < releases.length; i++) { %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
            <%= releases[i].target %>
          <span class="badge badge-primary badge-pill"><%= releases[i].major %>.<%= releases[i].minor %>.<%= releases[i].patch %></span>
        </li>
        <% } %>
      </ul>

  </main>

  <footer class="mastfoot mt-auto">
    <div class="inner">
      <p>...</p>
    </div>
  </footer>
</div>
</body>
</html>